<%- include ('../../header.ejs') %>
<%- include ('../nav.ejs', {active: "words"}) %>
<h1 class="text-3xl font-bold text-slate-500 italic pt-4"><%= title %></h1>
<div class="grid grid-cols-4 gap-4 pt-4" id="word-grid">
    <a href="/cms/words/upload" class="card bg-green-600 text-primary-content">
        <div class="btn bg-green-600 card-body items-center text-center justify-center">
            <span class="text-5xl text-bold align-middle pb-2">+</span>
        </div>
    </a>
    <% if(typeof (words) != "undefined") { %>
        <% words.forEach(word => { %>
            <div class="card lg:card-side card-compact bg-base-100 shadow-l">
                    <div class="card-body justify-start">
                        <h2 class="card-title"><%= word.word %> </h2>
                        <p class="italic"><%= word.categories%></p>
                        <figure><img class="h-32 w-32" loading="lazy" src="<%= word.image + "&" + Date.now()%>" alt="<%=word.word%>" /></figure>
                        <div class="card-actions justify-start">
                            <a class="btn bg-blue-600" href="words/<%= word.id %>">
                                Bewerken
                            </a>
                        </div>
                    </div>
            </div>
        <% }); %>
    <% } %>
</div>

