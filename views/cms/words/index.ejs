        <h1><%= title %></h1>
        <a id="upload-word-link" href="/cms/words/upload">Upload Word</a>
        <% if(typeof (words) != "undefined") { %>
            <ul>
                <% words.forEach(word => { %>
                    <li>
                        <a class="square-link" href="words/<%= word.id %>">
                            <%= word.word %>
                        </a>
                    </li>
                <% }); %>
            </ul>
        <% } %>

        <style>
            #container {
                display: flex;
                flex-direction: row;
