<%- include ('../../header.ejs') %>
<div id="container">
    <%- include ('../nav.ejs') %>
    <div id="content-row">
        <div id="words-container">
            <h1><%= title %></h1>
            <a id="upload-link" href="/cms/students/upload">Create a new student</a>
            <% if(typeof (students) != "undefined") { %>
                <ul>
                    <% students.forEach(student => { %>
                        <li>
                            <a class="square-link" href="students/<%= student.id %>">
                                name: <%= student.name %> ||
                                nickname: <%= student.nickname %>
                            </a>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </div>
    </div>
    <style>
        #container {
            display: flex;
            flex-direction: row;
            height: 100%;
        }

        #content-row {
            display: flex;
            width: 100%;
            flex-direction: row;
            flex-wrap: wrap;
            padding: 16px 16px 16px 32px;
        }

        #content-row > div {
            flex: 1;
            padding-right: 32px;
        }

        #upload-link {
            display: block;
            background-color: #4CAF50;
            color: white;
            text-align: center;
            padding: 32px;
            text-decoration: none;
            border-radius: 12px;
        }
    </style>

